extends layout

block content
  div(class="w3-container")
    header(class="w3-container w3-center w3-indigo")
      h1 XFichas
  div(class="w3-container")
    header(class="w3-container w3-light-grey")
      h4 Nova Ficha:
  div(class="w3-container")
    div(class="w3-card-4")
      form(class="w3-container" method="POST" action="/fichas/ficha" enctype="multipart/form-data")
        div(class="w3-row")
          div(class="w3-col s6")
            input(class="w3-input" type="file" placeholder="Selecione o documento XML com o conteúdo original da ficha" name="ficha")
            input(class="w3-input" type="text" placeholder="Introduza uma linha descritiva para a ficha" name="desc")
            input(class="w3-input" type="text" placeholder="Indique o nome da UC à qual a ficha está associada" name="uc")
            input(class="w3-btn w3-light-grey" type="submit" value="Adicionar")
  div(class="w3-container")
    footer(class="w3-container w3-indigo")
      address Gerado por XFichas :: jcr :: 2018-Fevereiro
